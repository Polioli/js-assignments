{
  "compilerOptions": {
    "module": "ES2015",
    "baseUrl": ".",
    "outDir": "./dist",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "removeComments": true,
    "target": "ES6",
    "allowJs": true
  },
  "include": [
    "./src/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}